<Page x:Class="SafePlace.Views.HomePageView.HomePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SafePlace.Views.HomePageView"
      xmlns:e="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:behaviors="clr-namespace:SafePlace.Behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePageView">

    <Grid Margin="0 0 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <!--A view box containing the current floor's image and all the cameras-->
        <Viewbox Grid.Column="1">
            <Grid x:Name="FloorGrid">
                <Image Source="/Images/Floor.png" x:Name="FloorMap" Grid.RowSpan="2">
                    <e:Interaction.Behaviors>
                        <behaviors:ImageClickBehavior Command="{ Binding CameraClickCommand }" />
                    </e:Interaction.Behaviors>
                </Image>
                <ItemsControl ItemsSource="{Binding Path=Cameras}" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="/Images/camera.png" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform X="{Binding Path=PositionX}" Y="{Binding Path=PositionY}"/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                                <e:Interaction.Behaviors>
                                    <behaviors:ImageClickBehavior Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl},
                                        Path=DataContext.CameraClickCommand}" />
                                </e:Interaction.Behaviors>
                            </Image>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    
                </ItemsControl>
                
                <!--Following 2 images are test data, images are to be added to FloorGrid when a floor is selected-->
                
                 <!--Margin="fromLeft,fromTop,fromRight,fromBottom", if all = 0, item is in middle of the floor image.
                        <Image Source="/Images/camera.png" Height="30" Margin="-337,334,337,272"/>
                        <Image Source="/Images/camera.png" Height="30" Margin="-699,23,699,583"/>
                        <Image Source="/Images/camera.png" Height="30" Margin="-667,547,667,59"/>
                        <Image Source="/Images/camera.png" Height="30" Margin="0,547,0,59"/>
                        <Image Source="/Images/camera.png" Height="30" Margin="119,547,-119,59"/>
                        <Image Source="/Images/camera.png" Height="30" Margin="444,547,-444,59"/>
                        <Image Source="/Images/camera.png" Height="30" Margin="135,33,-135,573"/>
                        <Image Source="/Images/camera.png" Height="30" Margin="347,33,-347,573"/>
                        <Image Source="/Images/camera.png" Height="30" Margin="616,33,-616,573"/>
                        -->
            </Grid>
        </Viewbox>
        <!--A StackPanel for buttons and list of floors-->
        <StackPanel>
            <Button Margin="0 0 10 0">
                <Image Source="/Images/up.png"/>
            </Button>
            <Button Margin="0 10 10 0">
                <Image Source="/Images/down.png"/>
            </Button>
            <ListView Margin="0 15 10 50" ItemsSource="{Binding FloorList}">
            </ListView>
            <!--Items Control to show what people are identified by the selected camera. Currently static-->
            <Label>Spotted People:</Label>
            <ItemsControl ItemsSource="{Binding Path=SpottedPeople}" MaxHeight="400" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Path=Name}" Grid.Column="0"/>
                            <TextBlock Text="{Binding Path=LastName}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>



        </StackPanel>
    </Grid>
</Page>
