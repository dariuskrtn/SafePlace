<Page x:Class="SafePlace.Views.HomePageView.HomePageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SafePlace.Views.HomePageView"
      xmlns:e="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:behaviors="clr-namespace:SafePlace.Behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePageView">

    <Grid Margin="10 10 10 10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        
        <!--A view box containing the current floor's image and all the cameras-->
        <Viewbox x:Name="FloorView" Grid.Column="1">
            <Grid x:Name="FloorGrid">
                <Image Source="/Images/Floor.png" x:Name="FloorMap" Grid.RowSpan="2">
                    <e:Interaction.Behaviors>
                        <behaviors:ImageClickBehavior Command="{ Binding CameraClickCommand }" />
                    </e:Interaction.Behaviors>
                </Image>
                <ItemsControl ItemsSource="{Binding Path=Cameras}" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Grid/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="/Images/camera.png" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform X="{Binding Path=PositionX}" Y="{Binding Path=PositionY}"/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                                <e:Interaction.Behaviors>
                                    <behaviors:ImageClickBehavior Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl},
                                        Path=DataContext.CameraClickCommand}" />
                                </e:Interaction.Behaviors>
                            </Image>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Viewbox>
        
        <!--Somehow DataGrid requires the bound collection to be empty before using ItemsControl-->
        <DataGrid HorizontalAlignment="Left" MaxWidth="300" Grid.Row="1" Grid.Column="1" AutoGenerateColumns="False" ItemsSource="{Binding SpottedPeople}" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" MinWidth="50" Width="SizeToCells" IsReadOnly="True"/>
                <DataGridTextColumn Header="Surname" Binding="{Binding LastName}" MinWidth="100" Width="SizeToCells" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!--A StackPanel for buttons and list of floors-->
        <StackPanel x:Name="Controls" Grid.Column="0" Grid.Row ="0">
            <Button Margin="0 0 10 0">
                <Image Source="/Images/up.png"/>
            </Button>
            <Button Margin="0 10 10 0">
                <Image Source="/Images/down.png"/>
            </Button>
            <ListView x:Name="FloorsList" Margin="0 15 10 50" ItemsSource="{Binding FloorList}"/>
        </StackPanel>
    </Grid>
</Page>
